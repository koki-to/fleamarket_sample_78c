%body.Buy
  %header.BuyTop
    .BuyTop__icon
      = link_to root_path do
        = image_tag "logo.png", alt: "logo", class: 'BuyTop__icon--img'

  %main.BuyMain
    .BuyMainConfirm
      .BuyMainConfirmContainer
        %h2.BuyMainConfirmContainer__title
          購入内容の確認
        .BuyMainConfirmContainer__info
          %figure.BuyMainConfirmContainer__info__figure
            = image_tag @item.item_images.first.url.url, alt: '商品のイメージ画像', class: 'BuyMainConfirmContainer__info__figure__img'
          .BuyMainConfirmContainer__info__box
            %p.BuyMainConfirmContainer__info__box__text
              = @item.name
            %p.BuyMainConfirmContainer__info__box__price
              %span.BuyMainConfirmContainer__info__box__price__taxIn
                送料込み（税込）
              %span.BuyMainConfirmContainer__info__box__price__number
                = "¥#{@item.price}"
        .BuyMainConfirmContainer__payment
          %span.BuyMainConfirmContainer__payment__text
            支払い金額
          %span.BuyMainConfirmContainer__payment__number
            = "¥#{@item.price}"
        .BuyMainConfirmContainer__payWay
          %h3.BuyMainConfirmContainer__payWay__title
            支払い方法
          = link_to("変更する ", '#', {class: "BuyMainConfirmContainer__payWay__edit"})
        .BuyMainConfirmContainer__cardData
          %p 
            クレジットカード
          %p
            = "**** **** **** " + @default_card_information.last4
          %p
            有効期限
          %p
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
          = image_tag 'https://pcweb-assets.mercdn.net/assets/img/card/visa.svg?2269318488', alt: 'visa', height: '20px', width: '50px', class: 'BuyMainConfirmContainer__cardData__img'
        .BuyMainConfirmContainer__postageType
          %h3.SellMainConfirmContainer__postageType__title
            配送方法
          = link_to("変更する", '#', {class: "BuyMainConfirmContainer__postageType__edit"})
        .BuyMainConfirmContainer__postData
          %p 
            = @user.sending_destination.post_code
          %p
            = "#{@user.sending_destination.prefecture_code[:name]} #{@user.sending_destination.city} #{@user.sending_destination.house_number} #{@user.sending_destination.building_name}"
          %p
            = @user.nickname
        .BuyMainConfirmContainer__btn
          = form_tag(action: :pay, method: :post) do
            %button(type="submit" class="BuyMainConfirmContainer__btn__submit")
              購入する


  %footer.BuyBottom
    .BuyBottomContents
      %ul.BuyBottomContents__lists
        %li.BuyBottomContents__lists__list
          = link_to 'プライバシーポリシー', '#'
        %li.BuyBottomContents__lists__list
          = link_to 'メルカリ利用規約', '#'
        %li.BuyBottomContents__lists__list
          = link_to '特定商取引に関する表記', '#'
    .BuyBottomLogo
      = link_to root_path do
        = image_tag 'logo.png', alt: 'logo', class: 'BuyBottomLogo--img'
    %p.BuyBottom__copyright
      © FURIMA